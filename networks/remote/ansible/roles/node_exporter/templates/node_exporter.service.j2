[Unit]
Description=Prometheus Node Exporter
After=network.target

[Service]
Restart=on-failure
Type=simple
User={{service}}
Group={{service}}
ExecStart=/usr/bin/node_exporter --collector.systemd --collector.netstat.fields=(.*) --collector.vmstat.fields=(.*)  --collector.interrupts

SyslogIdentifier=prometheus_node_exporter
Restart=always

[Install]
WantedBy=multi-user.target
