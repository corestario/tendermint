[Service]
Restart=on-failure
User={{service}}
Group={{service}}
PermissionsStartOnly=true
ExecStart=/usr/bin/tendermint node --proxy_app=kvstore --p2p.persistent_peers=@159.65.247.197:26656,@159.65.247.10:26656,@159.65.247.8:26656,@159.65.251.151:26656
